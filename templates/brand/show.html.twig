{% extends 'admin.html.twig' %}

{# {% block title %}Brand{% endblock %} #}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1100px; width: 90%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    td, th, a, label{ font-size: 12px}
</style>

<div class="example-wrapper">
    <h2>Brand</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ brand.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ brand.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ brand.description }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ brand.status ? 'Active' : 'Inactive' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_brand_index') }}" type="button" class="btn btn-outline-secondary">Back to list</a>

    <a href="{{ path('app_brand_edit', {'id': brand.id}) }}" type="button" class="btn btn-outline-secondary">Edit</a>

    {{ include('brand/_delete_form.html.twig') }}
</div>
{% endblock %}
