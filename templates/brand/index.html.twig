{% extends 'admin.html.twig' %}

{# {% block title %}Brand index{% endblock %} #}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1100px; width: 90%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    td, th, a{ font-size: 12px}
</style>

<div class="example-wrapper">
    <div class="container">
    <h2>Brand</h2>
    <a href="{{ path('app_brand_new') }}" type="button" class="btn btn-outline-success">Create new</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for brand in brands %}
            <tr>
                <td>{{ brand.id }}</td>
                <td>{{ brand.name }}</td>
                <td>{{ brand.description }}</td>
                <td>{{ brand.status ? 'Active' : 'Inactive' }}</td>
                <td>
                    <button type="button" class="btn btn-outline-secondary"><a href="{{ path('app_brand_show', {'id': brand.id}) }}">Show</a></button>
                    <button type="button" class="btn btn-outline-secondary"><a href="{{ path('app_brand_edit', {'id': brand.id}) }}">Edit</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
