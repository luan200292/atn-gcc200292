{% extends 'admin.html.twig' %}

{# {% block title %}Product index{% endblock %} #}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1100px; width: 90%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    td, th, a{ font-size: 12px}
</style>

<div class="example-wrapper">
    <div class="container">
    <h2>Products</h2>
    <a href="{{ path('app_product_new') }}" type="button" class="btn btn-outline-success">Create new</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Brand</th>
                <th>Date</th>
                <th>Quantity</th>
                <th>Image</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>${{ product.price }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.brand }}</td>
                <td>{{ product.date ? product.date|date('Y-m-d') : '' }}</td>
                <td>{{ product.quantity }}</td>
                <td><img src="/uploads/images/{{ product.image }}" style="width:100px"/></td>
                <td>{{ product.status ? 'Active' : 'Inactive' }}</td>
                <td>
                    <button type="button" class="btn btn-outline-secondary"><a href="{{ path('app_product_show', {'id': product.id}) }}">Show</a></button>
                    <button type="button" class="btn btn-outline-secondary"><a href="{{ path('app_product_edit', {'id': product.id}) }}">Edit</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
{% endblock %}
