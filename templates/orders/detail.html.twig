{% extends 'admin.html.twig' %}

{# {% block title %}Orders Detail{% endblock %} #}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1100px; width: 90%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    td, th, a{ font-size: 12px}
</style>

<div class="example-wrapper">
    <h2>Orders Detail</h2>
    <a href="{{ path('app_orders_index') }}" type="button" class="btn btn-outline-secondary">Back to list</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Order</th>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
        {% for o in orderD %}
            <tr>
                <td>{{ o.id }}</td>
                <td>{{ o.orderId }}</td>
                <td>{{ o.name }}</td>
                <td>{{ o.proQuantity }}</td>
                <td>{{ o.price }}</td>
                <td>{{ o.total }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
